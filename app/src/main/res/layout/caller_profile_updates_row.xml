<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_caller_profile_updates"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/appbar_padding_top"
        android:layout_marginBottom="@dimen/appbar_padding_top"
        android:clickable="false"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardCornerRadius="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/card_view_caller_profile_ref"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/basic_font"
                    android:text="@string/caller_profile_updates_ref_no"/>
                <TextView
                    android:id="@+id/card_view_caller_profile_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/basic_font"
                    android:gravity="end"
                    android:text="@string/caller_profile_updates_date"/>
            </LinearLayout>

            <TextView
                android:id="@+id/card_view_caller_profile_details"
                android:layout_width="match_parent"
                android:text="@string/caller_profile_updates_details"
                android:layout_marginTop="@dimen/appbar_padding_top"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/card_view_caller_profile_details_value"
                android:layout_width="match_parent"
                android:text="@string/caller_profile_updates_details"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/card_view_caller_profile_updates_tv"
                android:layout_width="match_parent"
                android:text="@string/caller_profile_updates"
                android:layout_marginTop="@dimen/appbar_padding_top"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/card_view_caller_profile_updates_value"
                android:layout_width="match_parent"
                android:text="@string/caller_profile_updates"
                android:textColor="@color/red"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>