<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="in.apps.maitreya.samaritansmumbai.activities.MainActivity">

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:gravity="center"
            android:text="@string/title_dashboard" />

        <LinearLayout
            android:id="@+id/main_ll_dash"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/addLog"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="@string/add_log_main"
                    android:textColor="@color/colorPrimaryDark"
                    android:onClick="addLogEntry"
                    tools:ignore="ButtonStyle" />
                <Button
                    android:id="@+id/viewLogs"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="@string/view_logs_main"
                    android:textColor="@color/colorPrimaryDark"
                    android:onClick="viewLogs"
                    tools:ignore="ButtonStyle" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/checkIn"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="@string/check_in"
                    android:onClick="checkIn"
                    tools:ignore="ButtonStyle" />
                <Button
                    android:id="@+id/checkOut"
                    android:layout_width="100dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_height="70dp"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="@string/check_out"
                    android:onClick="checkOut"
                    tools:ignore="ButtonStyle" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/viewCallerProfiles"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="@string/view_caller_profiles"
                    android:onClick="viewCallerProfiles"
                    tools:ignore="ButtonStyle" />
                <Button
                    android:id="@+id/requestSub"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="@string/request_sub"
                    android:onClick="requestSub"
                    android:visibility="invisible"
                    tools:ignore="ButtonStyle" />
            </LinearLayout>
        </LinearLayout>

</LinearLayout>
