<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/tab_linear_layout_child1"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/tab_linear_layout_child1_field1"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/activity_vertical_margin"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/cd_date_tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/small_font"
                android:layout_height="wrap_content"
                android:text="@string/cd_date"/>
            <TextView
                android:id="@+id/cd_date_val"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/small_font"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tab_linear_layout_child1_field8"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/activity_vertical_margin"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/cd_time"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textSize="@dimen/small_font"
                android:labelFor="@id/cd_time_hours"
                android:layout_height="wrap_content"
                android:text="@string/cd_time"/>
            <EditText
                android:id="@+id/cd_time_hours"
                android:layout_width="wrap_content"
                android:inputType="number"
                android:maxLength="2"
                android:textAlignment="center"
                android:text="@string/double_zero"
                android:textSize="@dimen/small_font"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/cd_time_colon"
                android:layout_width="wrap_content"
                android:text="@string/cd_time_colon"
                android:textSize="@dimen/small_font"
                android:labelFor="@id/cd_time_mins"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/cd_time_mins"
                android:layout_width="wrap_content"
                android:inputType="number"
                android:textSize="@dimen/small_font"
                android:text="@string/double_zero"
                android:textAlignment="center"
                android:maxLength="2"
                android:layout_height="wrap_content" />
            <Spinner
                android:id="@+id/spinner_cd_ampm"
                android:layout_width="wrap_content"
                android:dropDownWidth="fill_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/cd_time_buffer"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/small_font"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/tab_linear_layout_child1_field13"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/activity_vertical_margin"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/cd_duration"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textSize="@dimen/small_font"
                android:layout_height="wrap_content"
                android:text="@string/cd_duration"/>
            <EditText
                android:id="@+id/cd_duration_hours_val"
                android:inputType="number"
                android:layout_width="wrap_content"
                android:textSize="@dimen/small_font"
                android:text="@string/cd_risk_0"
                android:maxLength="1"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/cd_duration_hours"
                android:layout_width="wrap_content"
                android:textSize="@dimen/small_font"
                android:labelFor="@id/cd_duration_hours_val"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:text="@string/cd_duration_hours"/>
            <EditText
                android:id="@+id/cd_duration_mins_val"
                android:inputType="number"
                android:layout_width="wrap_content"
                android:maxLength="2"
                android:textSize="@dimen/small_font"
                android:text="@string/double_zero"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/cd_duration_mins"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textSize="@dimen/small_font"
                android:labelFor="@id/cd_duration_mins_val"
                android:layout_height="wrap_content"
                android:text="@string/cd_duration_mins"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tab_linear_layout_child1_field14"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/activity_vertical_margin"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/cd_language"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/small_font"
                android:layout_height="wrap_content"
                android:text="@string/cd_language"/>
            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="start"
                android:orientation="horizontal">
                <RadioButton android:id="@+id/cd_radio_E"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/small_font"
                    android:text="@string/cd_lang_E"
                    android:checked="true"
                    android:onClick="onRadioButtonClickedCD"/>
                <RadioButton android:id="@+id/cd_radio_H"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/small_font"
                    android:text="@string/cd_lang_H"
                    android:onClick="onRadioButtonClickedCD"/>
                <RadioButton android:id="@+id/cd_radio_M"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/small_font"
                    android:text="@string/cd_lang_M"
                    android:onClick="onRadioButtonClickedCD"/>
                <RadioButton android:id="@+id/cd_radio_G"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/small_font"
                    android:text="@string/cd_lang_G"
                    android:onClick="onRadioButtonClickedCD"/>
            </RadioGroup>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/tab_linear_layout_child1_field15"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/activity_vertical_margin"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/cd_frequent_caller"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/small_font"
                android:layout_height="wrap_content"
                android:text="@string/cd_frequent_caller"/>
            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="start"
                android:orientation="horizontal">
                <RadioButton android:id="@+id/cd_frequent_caller_Y"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/cd_Y"
                    android:textSize="@dimen/small_font"
                    android:checked="true"
                    android:onClick="onRadioButtonClickedCD"/>
                <RadioButton android:id="@+id/cd_frequent_caller_N"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/small_font"
                    android:text="@string/cd_N"
                    android:onClick="onRadioButtonClickedCD"/>
            </RadioGroup>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/tab_linear_layout_child1_field2"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/activity_vertical_margin"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/cd_gender_tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/small_font"
                android:layout_height="wrap_content"
                android:text="@string/cd_male_female"/>
            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="start"
                android:orientation="horizontal">
                <RadioButton android:id="@+id/cd_radio_male"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/cd_male"
                    android:textSize="@dimen/small_font"
                    android:checked="true"
                    android:onClick="onRadioButtonClickedCD"/>
                <RadioButton android:id="@+id/cd_radio_female"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/small_font"
                    android:layout_height="wrap_content"
                    android:text="@string/cd_female"
                    android:onClick="onRadioButtonClickedCD"/>
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tab_linear_layout_child1_field3"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/activity_vertical_margin"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/cd_tel_door"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/small_font"
                android:layout_height="wrap_content"
                android:text="@string/cd_tel_door"/>
            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="start"
                android:orientation="horizontal">
                <RadioButton android:id="@+id/cd_radio_tel"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/cd_tel"
                    android:textSize="@dimen/small_font"
                    android:checked="true"
                    android:onClick="onRadioButtonClickedCD"/>
                <RadioButton android:id="@+id/cd_radio_door"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/cd_door"
                    android:textSize="@dimen/small_font"
                    android:onClick="onRadioButtonClickedCD"/>
            </RadioGroup>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/tab_linear_layout_child1_field4"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/activity_vertical_margin"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/cd_old_new"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/small_font"
                android:layout_height="wrap_content"
                android:text="@string/cd_new_old"/>
            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="start"
                android:orientation="horizontal">
                <RadioButton android:id="@+id/cd_radio_new"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/cd_new"
                    android:textSize="@dimen/small_font"
                    android:checked="true"
                    android:onClick="onRadioButtonClickedCD"/>
                <RadioButton android:id="@+id/cd_radio_old"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/cd_old"
                    android:textSize="@dimen/small_font"
                    android:onClick="onRadioButtonClickedCD"/>
            </RadioGroup>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/tab_linear_layout_child1_field5"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/activity_vertical_margin"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/cd_suicide_qn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/small_font"
                android:layout_height="wrap_content"
                android:text="@string/cd_suicide_qn"/>
            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="start"
                android:orientation="horizontal">
                <RadioButton android:id="@+id/cd_radio_suicide_Y"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/cd_Y"
                    android:textSize="@dimen/small_font"
                    android:checked="true"
                    android:onClick="onRadioButtonClickedCD"/>
                <RadioButton android:id="@+id/cd_radio_suicide_N"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/small_font"
                    android:text="@string/cd_N"
                    android:onClick="onRadioButtonClickedCD"/>
            </RadioGroup>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/tab_linear_layout_child1_field6"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/activity_vertical_margin"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/cd_risk_level"
                android:layout_width="wrap_content"
                android:textSize="@dimen/small_font"
                android:layout_height="wrap_content"
                android:text="@string/cd_risk_level"/>
            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:orientation="horizontal">
                <RadioButton android:id="@+id/cd_radio_riskNA"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/na"
                    android:textSize="@dimen/small_font"
                    android:checked="true"
                    android:onClick="onRadioButtonClickedCD"/>
                <RadioButton android:id="@+id/cd_radio_risk0"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/cd_risk_0"
                    android:textSize="@dimen/small_font"
                    android:onClick="onRadioButtonClickedCD"/>
                <RadioButton android:id="@+id/cd_radio_risk1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/cd_risk_1"
                    android:textSize="@dimen/small_font"
                    android:onClick="onRadioButtonClickedCD"/>
                <RadioButton android:id="@+id/cd_radio_risk2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/cd_risk_2"
                    android:textSize="@dimen/small_font"
                    android:onClick="onRadioButtonClickedCD"/>
                <RadioButton android:id="@+id/cd_radio_risk3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/cd_risk_3"
                    android:textSize="@dimen/small_font"
                    android:onClick="onRadioButtonClickedCD"/>
            </RadioGroup>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/tab_linear_layout_child1_field9"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/activity_vertical_margin"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/cd_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/small_font"
                android:layout_height="wrap_content"
                android:text="@string/cd_caller_name"/>
            <EditText
                android:id="@+id/cd_name_val"
                android:inputType="text"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textSize="@dimen/small_font"
                android:hint="@string/cd_default_blank"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tab_linear_layout_child1_field10"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/activity_vertical_margin"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/cd_age"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/small_font"
                android:layout_height="wrap_content"
                android:text="@string/cd_caller_age"/>
            <EditText
                android:id="@+id/cd_age_val"
                android:inputType="text"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textSize="@dimen/small_font"
                android:hint="@string/cd_default_blank"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tab_linear_layout_child1_field11"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/activity_vertical_margin"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/cd_plan"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/small_font"
                android:layout_height="wrap_content"
                android:text="@string/cd_plan"/>
            <EditText
                android:id="@+id/cd_plan_val"
                android:inputType="text"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textSize="@dimen/small_font"
                android:hint="@string/cd_default_blank"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tab_linear_layout_child1_field12"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/activity_vertical_margin"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/cd_attempt"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/small_font"
                android:layout_height="wrap_content"
                android:text="@string/cd_attempt"/>
            <EditText
                android:id="@+id/cd_attempt_val"
                android:inputType="text"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textSize="@dimen/small_font"
                android:hint="@string/cd_default_blank"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tab_linear_layout_child1_field16"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/activity_vertical_margin"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/cd_support"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/small_font"
                android:layout_height="wrap_content"
                android:text="@string/cd_caller_support"/>
            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="start"
                android:orientation="horizontal">
                <RadioButton android:id="@+id/cd_radio_support_F"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/cd_support_F"
                    android:textSize="@dimen/small_font"
                    android:checked="true"
                    android:onClick="onRadioButtonClickedCD"/>
                <RadioButton android:id="@+id/cd_radio_support_A"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/cd_support_A"
                    android:textSize="@dimen/small_font"
                    android:onClick="onRadioButtonClickedCD"/>
                <RadioButton android:id="@+id/cd_radio_support_H"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/cd_support_H"
                    android:textSize="@dimen/small_font"
                    android:onClick="onRadioButtonClickedCD"/>
                <RadioButton android:id="@+id/cd_radio_support_PG"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/cd_support_PG"
                    android:textSize="@dimen/small_font"
                    android:onClick="onRadioButtonClickedCD"/>
            </RadioGroup>

        </LinearLayout>
        <include layout="@layout/subfragment1_caller_details_last"/>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>