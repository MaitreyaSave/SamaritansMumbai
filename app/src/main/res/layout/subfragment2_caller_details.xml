<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/tab_linear_layout_child2"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_vertical_margin"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/tab_linear_layout_child2_field1"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/cd_gist_tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:labelFor="@id/cd_gist_et"
                android:textSize="@dimen/small_font"
                android:text="@string/cd_gist"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/cd_gist_et"
                android:inputType="textMultiLine|textCapSentences"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:padding="10dp"
                android:layout_marginStart="10dp"
                android:layout_height="100dp"
                android:gravity="top"
                android:background="@drawable/edit_text_style"
                android:textSize="@dimen/small_font"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tab_linear_layout_child2_field2"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/cd_feelings_addressed"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:labelFor="@id/cd_feelings_addressed_et"
                android:textSize="@dimen/small_font"
                android:text="@string/cd_feelings"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/cd_feelings_addressed_et"
                android:inputType="textMultiLine|textCapSentences"
                android:padding="10dp"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_marginStart="10dp"
                android:layout_height="100dp"
                android:gravity="top"
                android:background="@drawable/edit_text_style"
                android:textSize="@dimen/small_font"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tab_linear_layout_child2_field3"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/cd_volunteers_response"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:labelFor="@id/cd_volunteers_response_et"
                android:textSize="@dimen/small_font"
                android:text="@string/cd_vol_response"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/cd_volunteers_response_et"
                android:inputType="textMultiLine|textCapSentences"
                android:padding="10dp"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginStart="10dp"
                android:gravity="top"
                android:background="@drawable/edit_text_style"
                android:textSize="@dimen/small_font"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tab_linear_layout_child2_field4"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/cd_call_end"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:labelFor="@id/cd_call_end_et"
                android:textSize="@dimen/small_font"
                android:text="@string/cd_call_end"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/cd_call_end_et"
                android:inputType="textMultiLine|textCapSentences"
                android:padding="10dp"
                android:layout_marginStart="10dp"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:gravity="top"
                android:background="@drawable/edit_text_style"
                android:textSize="@dimen/small_font"
                />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>