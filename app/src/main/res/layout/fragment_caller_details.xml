<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.apps.maitreya.samaritansmumbai.CallerDetailsActivity$PlaceholderFragment">
    <LinearLayout
        android:id="@+id/tab_linear_layout_template"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/section_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintTop_creator="1" />

        <LinearLayout
                android:id="@+id/tab_linear_layout_child1"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/activity_vertical_margin"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/cd_date_tv"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content"
                    android:text="@string/cd_date"/>
                <TextView
                    android:id="@+id/cd_date_val"
                    android:layout_width="wrap_content"
                    android:layout_weight="3"
                    android:textSize="20sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_height="wrap_content"
                    />
        </LinearLayout>

            <LinearLayout
                android:id="@+id/tab_linear_layout_child2"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/activity_vertical_margin"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/cd_gist_tv"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:labelFor="@id/cd_gist_et"
                    android:textSize="20sp"
                    android:text="@string/cd_gist"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/cd_gist_et"
                    android:inputType="textMultiLine"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="80dp"

                    android:background="@drawable/edit_text_style"
                    android:textSize="20sp"
                    android:textColor="@color/colorPrimaryDark"
                     />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/tab_linear_layout_child3"
                android:layout_width="match_parent"
                android:padding="@dimen/activity_vertical_margin"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/sams_name_tv"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:text="@string/cd_sam_name"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/sams_name_tv_val"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:textSize="20sp"
                    android:text="@string/na"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_height="wrap_content" />
            </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>