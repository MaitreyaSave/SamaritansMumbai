<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.apps.maitreya.samaritansmumbai">

    <!-- To auto-complete the username text field in the login form with the user's emails -->

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".activities.StartActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".activities.CreateUserActivity"
            android:label="@string/title_activity_create_user"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.LogEntryActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.ViewLogsRecyclerActivity"
            android:label="@string/title_activity_view_logs_recycler"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.ViewSingleLogActivity" />
        <activity
            android:name=".activities.ViewCallerProfilesRecyclerActivity"
            android:label="@string/title_activity_caller_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.CreateCallerProfileActivity"
            android:label="@string/title_activity_create_caller_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.ViewSingleCallerProfileActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.UpdateCallerProfile"
            android:label="@string/title_activity_update_caller_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.SelectSubRecyclerActivity"
            android:label="@string/title_activity_select_sub"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>